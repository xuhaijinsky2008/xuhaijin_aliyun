  mixin link(href, name)
    //- attributes == {class: "btn"}
    a(class!=attributes.class href=href)= name

  mixin user(data)
    li
        p.name= data.name
        for data2 in data.links
          p.links= data2.name +": "
            for data3 in data2.values
              +link(data3.url, data3.desc)(class="btn") 
              text  &nbsp; &nbsp;
  
              

